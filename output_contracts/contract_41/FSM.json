            "type": "string",
            "initialValue": "IsdaToken"
        },
        {
            "name": "decimals",
            "type": "uint8",
            "initialValue": 18
        },
        {
            "name": "_totalSupply",
            "type": "uint",
            "initialValue": 1000000000
        },
        {
            "name": "balances",
